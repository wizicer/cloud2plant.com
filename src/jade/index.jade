extends layout\layout.jade
block sections
  section.dark
    .container
      h1.has-subtitle=_("Bring cloud to your plant")
      p.subtitle=_("without putting your data into risk")
      .row.text-center
        .col-sm-4
          span.circle.circle-lg.circle-orange
            i.fa.fa-cloud
          !=_md("cloud technology")
        .col-sm-4
          span.circle.circle-lg.circle-green
            i.fa.fa-pencil-square-o
          !=_md("pay you used")
        .col-sm-4
          span.circle.circle-lg.circle-blue
            i.fa.fa-lock
          !=_md("super secured")
      .call-to-action-buttons
        a.btn.btn-success(href="#products")=_("Learn more")
        //-a.btn.btn-link(href="signup.html") Sign up for a free trial
  section.light#products
    .container
      h1=_("What can we brought to you?")
      .row.text-center
        .col-sm-4
          span.cloud.cloud-hmi
          !=_md("cloud hmi description")
          .call-to-action-buttons
            a.btn.btn-success(href="hmifeature.html")=_("Learn more")
        .col-sm-4
          span.cloud.cloud-plc
          !=_md("cloud plc description")
          .call-to-action-buttons
            a.btn.btn-success.disabled=_("Still in Development")
        .col-sm-4
          span.cloud.cloud-dcs
          !=_md("cloud dcs description")
          .call-to-action-buttons
            a.btn.btn-success.disabled=_("Still in Plan")
  section.dark
    .container
      h1=_("Why you need our cloud to plant?")
      .row
        .col-md-5.col-md-push-1.col-sm-6
          .icon-left
            i.fa.fa-lock.icon-success
            !=_md("why cloud no risk")
          .icon-left
            i.fa.fa-clock-o.icon-success
            !=_md("why cloud saves you time")
          .icon-left
            i.fa.fa-usd.icon-success
            !=_md("why cloud super affordable")
        .col-md-5.col-md-push-1.col-sm-6
          .icon-left
            i.fa.fa-magic.icon-success
            !=_md("why cloud tons of features")
          .icon-left
            i.fa.fa-cloud-upload.icon-success
            !=_md("why cloud nothing to update")
          .icon-left
            i.fa.fa-flip-horizontal.fa-comment-o.icon-success
            !=_md("why cloud legendary support")
      .call-to-action-buttons
        //-a.btn.btn-primary(href="signup.html") Sign up for a free trial
        a.btn.btn-primary(href="hmifeature.html")=_("View features")
  section.light
    .container
      h1=_("mobile-friendly design title")
      .row
        .col-lg-6.col-lg-push-5.col-md-6.col-md-push-6
          img(src="img/devices.png", alt="Laptop, tablet, and phone")
        .col-lg-4.col-lg-pull-5.col-md-5.col-md-pull-6
          !=_md("mobile-friendly design description")
      .call-to-action-buttons
        //-a.btn.btn-primary(href="signup.html") Sign up for a free trial
        a.btn.btn-primary(href="hmifeature.html")=_("View features")
